@model Ong

@{
    ViewData["title"] = "Cadastrar uma ong";
}
<meta charset="utf-8" />

@section Links{
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1 d-flex justify-content-end mr-5">
            <li class="nav-item">
                <a class="nav-link text-dark another-page" style="font-size:22px" asp-controller="Home" asp-action="Index">Página Inicial</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark another-page" style="font-size:22px" asp-controller="doacao" asp-action="cadastrar">Doar Alimento</a>
            </li>
            <li class="nav-item">
                <a class="nav-link current-page" style="font-size:22px; color: var(--main-red); font-weight: bold" asp-controller="Ong" asp-action="Index">ONGs</a>
            </li>
        </ul>
    </div>
}

<div class="pre-scrollable d-flex box-shadow flex-column align-items-center w-100 mh-100 col-12 ma-2 px-4 pb-5" style="background-color: #F8F8F8;">
    <div class="d-flex justify-content-center " style="padding-top: 2.5%; padding-bottom: 2.5%;">
        <h4 class="font-weight-bold d-flex flex-row m-0" style="color: var(--light-red)">Cadastre sua ONG</h4>
    </div>
    <feedback texto="@TempData["Erro"]" is-error="true"></feedback>
    <feedback texto="@TempData["Sucesso"]"></feedback>
    <form asp-action="Cadastrar" asp-controller="Ong" class="w-75">
        <partial name="_FormOng" />
        <div class="d-flex justify-content-center">
            <a asp-action="index" asp-controller="ong" class="btn btn-danger px-5" style="background-color: var(--main-red);">Voltar</a>
            <input type="submit" value="Salvar" class="btn ml-3 px-5 text-white" style="background-color: var(--header-bg);" />
        </div>
    </form>
    <div style="display: none;">
        <form asp-action="buscarcep" asp-controller="home">
            <input name="cep" id="cepForm" />
            <input name="url" id="urlForm" />
            <button id="btnBuscar"></button>
        </form>
    </div>
</div>
