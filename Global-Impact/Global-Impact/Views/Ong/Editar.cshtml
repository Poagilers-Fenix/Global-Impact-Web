@model Ong

@{
    ViewData["title"] = "Editar ONG";
}

@section Links{
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1 d-flex justify-content-end mr-5">
            <li class="nav-item">
                <a class="nav-link text-dark another-page" asp-controller="Home" asp-action="Index">Página Inicial</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark another-page" asp-controller="doacao" asp-action="cadastrar">Doar Alimento</a>
            </li>
            <li class="nav-item">
                <a class="nav-link current-page" style="color: var(--main-red); font-weight: bold" asp-controller="Ong" asp-action="Index">ONGs</a>
            </li>
        </ul>
    </div>
}


<div class="pre-scrollable d-flex box-shadow flex-column align-items-center w-100 mh-100 col-12 ma-2 px-4 pb-5" style="background-color: #F8F8F8;">
    <div class="d-flex justify-content-center " style="padding-top: 2.5%; padding-bottom: 2.5%;">
        <h4 class="font-weight-bold d-flex flex-row m-0" style="color: var(--light-red)">@ViewData["title"]</h4>
    </div>
    <feedback texto="@TempData["Erro"]" is-error="true"></feedback>
    <feedback texto="@TempData["Sucesso"]"></feedback>

        <div class="d-flex justify-content-center text-center">
            
        </div>
    <form asp-action="Editar" asp-controller="Ong" class="w-75">
        <input asp-for="OngId" type="hidden" />
        <partial name="_FormOng" />
        <div class="d-flex justify-content-center text-center">
            <button class="btn-abled btn mx-3">Salvar Alterações</button>
            <a asp-action="editarSenha" asp-route-id="@Model.OngId" class="btn btn-abled">Editar senha →</a>
            @*<a asp-action="EditarSenha" asp-controller="ong"  class="btn btn-danger px-5 ml-3" style="background-color: var(--main-red);">Editar senha</a>*@
        </div>
    </form>
        <button onclick="goBack()" class="btn btn-outline m-3">Voltar</button>
    <div style="display: none;">
        <form asp-action="buscarcep" asp-controller="home">
            <input name="cep" id="cepForm" />
            <input name="url" id="urlForm" />
            <button id="btnBuscar"></button>
        </form>
    </div>
</div>