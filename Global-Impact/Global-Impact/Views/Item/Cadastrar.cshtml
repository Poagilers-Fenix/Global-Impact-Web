@model Item

@{
    ViewData["title"] = "Cadastro de item";
}


@section Links{
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1 d-flex justify-content-end mr-5">
            <li class="nav-item">
                <a class="nav-link text-dark another-page" asp-controller="Home" asp-action="Index">Página inicial</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark another-page" asp-controller="doacao" asp-action="cadastrar">Nova doação</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark another-page" asp-controller="doacao" asp-action="index">Ver doações</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark another-page" asp-controller="Ong" asp-action="Index">ONGs</a>
            </li>
        </ul>
    </div>
}

<div class="b-radius box-shadow h-100 w-100 d-flex">
    <div class="d-flex flex-column align-items-center col-12 justify-content-center">
        <h4 class="title m-4">@ViewData["title"]</h4>

        @if (TempData["Sucesso"] != null)
        {
            <Feedback Texto="@TempData["Sucesso"]" is-error="false"></Feedback>
        }
        else
        {
            <Feedback Texto="@TempData["Erro"]" is-error="true"></Feedback>
        }

        <form asp-action="cadastrar" class="col-6">
            <div class="row">
                <div class="form-group col-6">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Nome"></label>
                    </div>
                    <div class="d-flex flex-column">
                        <input asp-for="Nome" class="form-control mb-2">
                        <span asp-validation-for="Nome" class="text-danger" style="text-align: center"></span>
                    </div>
                </div>
                <div class="form-group col-6">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Foto"></label>
                    </div>
                    <div class="d-flex flex-column">
                        <input asp-for="Foto" class="form-control mb-2">
                        <span asp-validation-for="Foto" class="text-danger mb-3" style="text-align: center"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-column justify-content-center align-items-center">
                <button type="submit" class="btn btn-abled text-cn w-25">Adicionar</button>
                <a asp-action="cadastrar" asp-controller="doacao" class="btn btn-outline m-3 d-flex align-self-center">Voltar</a>
            </div>
        </form>
    </div>
</div>