@model Estabelecimento

<h4 class="ml-4 title" style="color: #333">Endereço</h4>
<p class="paragraph text-info mt-1" style="text-indent: 0">Digite o CEP para que o endereço seja prenchido automaticamente!</p>
<br />

<div class="d-flex">
    <div class="form-group col-3">
        <div>
            <label asp-for="Endereco.Cep"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Endereco.Cep" id="cep" onblur="buscarCEP()" class="form-control" value="@((TempData["cep"] != null) ? (TempData["cep"]) : (""))" />
            <span asp-validation-for="Endereco.Cep" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>

    <div class="form-group col-4">
        <div>
            <label asp-for="Endereco.Bairro"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Endereco.Bairro" class="form-control" value="@((TempData["bairro"] != null) ? (TempData["bairro"]) : (""))" />
            <p>@ViewBag.bairro</p>
            <span asp-validation-for="Endereco.Bairro" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>

    <div class="form-group col-4">
        <div>
            <label asp-for="Endereco.Cidade"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Endereco.Cidade" class="form-control" value="@((TempData["cidade"] != null) ? (TempData["cidade"]) : (""))" />
            <span asp-validation-for="Endereco.Cidade" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>

    <div class="form-group col-1">
        <div>
            <label asp-for="Endereco.UF"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Endereco.UF" id="uf" class="form-control p-0 text-center" value="@((TempData["uf"] != null) ? (TempData["uf"]) : (""))" />
            <span asp-validation-for="Endereco.UF" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>
</div>

<div class="d-flex mb-2" style="border-bottom: var(--light-grey) solid 2px">
    <div class="form-group col-6">
        <div>
            <label asp-for="Endereco.Logradouro"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Endereco.Logradouro" class="form-control" value="@((TempData["logradouro"] != null) ? (TempData["logradouro"]) : (""))" />
            <span asp-validation-for="Endereco.Logradouro" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>

    <div class="form-group col-2">
        <div>
            <label asp-for="Endereco.Numero"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Endereco.Numero" class="form-control" />
            <span asp-validation-for="Endereco.Numero" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>

    <div class="form-group col-4">
        <div>
            <label asp-for="Endereco.Complemento"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Endereco.Complemento" class="form-control" />
            <span asp-validation-for="Endereco.Complemento" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>
</div>

<br />

<div class="d-flex">
    <div class="form-group col-8">
        <div>
            <label asp-for="Nome"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>

    <div class="form-group col-4">
        <div>
            <label asp-for="Cnpj"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Cnpj" id="cnpj" class="form-control" />
            <span asp-validation-for="Cnpj" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>
</div>

<div class="d-flex">
    <div class="form-group col-2">
        <div>
            <label asp-for="Telefone"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Telefone" id="tel" class="form-control" />
            <span asp-validation-for="Telefone" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>

    <div class="form-group col-4">
        <div>
            <label asp-for="Email"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>

    <div class="form-group col-3">
        <div>
            <label asp-for="Senha">Senha</label>
        </div>
        <div class="d-flex flex-column">
            <input type="password" name="senha" asp-for="Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>

    <div class="form-group col-3">
        <div>
            <label>Confirme a senha</label>
        </div>
        <div class="d-flex flex-column">
            <input name="confirmaSenha" type="password" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>
</div>

<script type="text/javascript">
    var TelMaskBehavior = function (val) {
        return val.replace(/\D/g, '').length === 11 ? '(00) 00000-0000' : '(00) 0000-00009';
    },
        TelOptions = {
            onKeyPress: function (val, e, field, options) {
                field.mask(TelMaskBehavior.apply({}, arguments), options);
            }
        };
    $('#tel').mask(TelMaskBehavior, TelOptions);
    $("#cep").mask("00000-000");
    $('#cnpj').mask('00.000.000/0000-00', { reverse: true });
    $("#uf").mask("AA");
</script>