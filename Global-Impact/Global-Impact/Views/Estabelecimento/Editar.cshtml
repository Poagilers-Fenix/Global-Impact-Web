@model Estabelecimento

@{
    ViewData["title"] = "Editar Estabelecimento";
    Layout = "_LayoutUser";
}

<div class="w-50 mx-auto mt-2 mb-4 d-flex justify-content-around">
    <h4 class="title">@ViewData["title"]</h4>
</div>

<div class="d-flex col-8 justify-content-center align-self-center m-auto">
    <Feedback Texto="@TempData["Erro"]" is-error="true"></Feedback>
    <Feedback texto="@TempData["Sucesso"]"></Feedback>
</div>

<div class="d-flex flex-column align-items-center justify-content-center container">
    <form class="w-75" asp-action="editar">
        <input asp-for="EstabelecimentoId" type="hidden" />
        <partial name="_FormEstab" /> <br />

        <div class="d-flex justify-content-center text-center">
            <button class="btn-abled btn mx-3">Salvar Alterações</button>
            <a asp-action="editarSenha" class="btn btn-abled">Editar senha →</a>
        </div>
    </form>
    <button onclick="goBack()" class="btn btn-outline m-3">Voltar</button>
    <div style="display: none;">
        <form asp-action="buscarcep" asp-controller="home">
            <input name="cep" id="cepForm" />
            <input name="url" id="urlForm" />
            <button id="btnBuscar"></button>
        </form>
    </div>
</div>
